# VPS用環境設定ファイルの例
# このファイルを .env にコピーして、実際の値を設定してください

# FANZA API設定
FANZA_API_ID=your_fanza_api_id
FANZA_AFFILIATE_ID=your_fanza_affiliate_id

# DMM API設定（FANZA APIと同じ値）
DMM_API_ID=your_fanza_api_id
DMM_AFFILIATE_ID=your_fanza_affiliate_id

# WordPress設定
WP_URL=https://your-wordpress-site.com
WP_USERNAME=your_username
WP_APP_PASSWORD="your_app_password"

# Google Gemini API（キャラクター認識用）
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-pro
GEMINI_RPM_LIMIT=15

# Grok API設定（記事生成用）
GROK_API_KEY=your_grok_api_key
GROK_BASE_URL=https://api.x.ai/v1
GROK_MODEL=grok-2-1212
GROK_RPM_LIMIT=50

# Google Sheets設定
GOOGLE_SHEETS_ID=your_spreadsheet_id
GOOGLE_APPLICATION_CREDENTIALS=/home/user/wordpress-auto-post/config/wordpress-auto-post-service-account.json

# VPS設定
VPS_MAX_CONCURRENT_TASKS=2
VPS_POSTS_PER_RUN=3
MAX_SAMPLE_IMAGES=15

# スケジューラー設定
MAX_CONCURRENT_TASKS=5
POSTS_PER_DAY=24
RETRY_ATTEMPTS=3
RETRY_DELAY=300